<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyTextView">
        <attr name="myColor" format="reference" />
        <attr name="text" format="string" />
        <attr name="value" format="string" />
    </declare-styleable>
    <declare-styleable name="MyViewGroup">
        <attr name="number" format="integer" />
    </declare-styleable>
    <declare-styleable name="HorizontalItemBar">
        <attr name="show_ItemNumber" format="integer" />                <!--显示条目的数量-->
        <attr name="isShow_indicateIcon" format="boolean" />        <!--是否显示指示器,只对样式1生效-->
        <attr name="normalTextColor" format="color" />              <!--普通文字颜色-->
        <attr name="checkItemTextColor" format="color" />           <!--选中条目的文字颜色-->
        <attr name="checkItemTextSize" format="dimension" />        <!--选中条目的文字大小-->
        <attr name="android:textSize" format="dimension" />         <!--文字大小-->
        <attr name="android:paddingTop" format="dimension" />       <!--内边距-->
        <attr name="android:paddingBottom" format="dimension" />    <!--内边距-->
        <attr name="android:paddingLeft" format="dimension" />      <!--内边距-->
        <attr name="android:paddingRight" format="dimension" />     <!--内边距-->
        <attr name="indicator_width" format="dimension" />          <!--指示器宽度-->
        <attr name="indicator_height" format="dimension" />         <!--指示器高度-->
        <attr name="indicator_color" format="color" />              <!--指示器颜色-->
        <attr name="indicator_default_position" format="integer" /> <!--指示器默认选中位置,最大不能超过要显示的条目数量-->
        <attr name="isLoop" format="boolean" />                     <!--条目是否循环-->
        <attr name="itemAlignIndicator" format="boolean" />         <!--条目起始位置是否跟指示器默认选中位置对齐,只对样式2生效-->
    </declare-styleable>

</resources>