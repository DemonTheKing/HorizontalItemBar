<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/myHotel_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="305dp"
        android:layout_height="200dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_alignParentRight="true"
        android:background="@color/black">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/cover_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black">

        <ImageView
            android:id="@+id/up_icon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="32.5dp"
            android:layout_marginTop="18.5dp" />

        <ImageView
            android:id="@+id/down_icon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_below="@id/up_icon"
            android:layout_alignLeft="@id/up_icon" />

        <ImageView
            android:id="@+id/hotelLogo"
            android:layout_width="105.5dp"
            android:layout_height="42.5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20.5dp"
            android:layout_marginBottom="11dp" />
    </RelativeLayout>
</RelativeLayout>